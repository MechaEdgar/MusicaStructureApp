<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.android.musicalstructureapp.MainActivity">

    <TextView
        android:id="@+id/playingView"
        style="@style/CategoryStyle"
        android:background="@color/colorNowPlaying"
        android:text="Now Playing" />

    <TextView
        android:id="@+id/homeView"
        style="@style/CategoryStyle"
        android:background="@color/colorHome"
        android:text="Home" />

    <TextView
        android:id="@+id/searchView"
        style="@style/CategoryStyle"
        android:background="@color/colorSearch"
        android:text="Search" />

    <TextView
        android:id="@+id/exploreView"
        style="@style/CategoryStyle"
        android:background="@color/colorExplore"
        android:text="Explore" />

    <TextView
        android:id="@+id/libraryView"
        style="@style/CategoryStyle"
        android:background="@color/colorLibrary"
        android:text="Library" />
</LinearLayout>
